<%- include('./header.ejs') %>

    <h1>Editar película</h1>
    <form action="/editar/<%=pelicula.id%>" method="POST">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" value="<%=pelicula.title%>">
        </div> 
        <div>
            <label for="">Premios</label>
            <input type="number" name="premios" value="<%=pelicula.awards%>">
        </div>
        <div>
            <label for="">Duración</label>
            <input type="number" name="duracion" value="<%=pelicula.length%>">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="number" name="rating" value="<%=pelicula.rating%>">
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="fecha_estreno">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genre">
                <% for (let i = 0; i < generos.length; i++) { %>
                    <% if (generos [i].id == pelicula.genre_id) { %>
                        <option value="<%= generos[i].id%>" selected>                   
                            <%=generos[i].name%>                       
                        </option>
                    <% } else { %>                     
                        <option value="<%= generos[i].id%>">                     
                            <%=generos [i].name%>                        
                        </option>
                    <% } %>

                    <% } %>
            </select>
        </div> 
        <button type="submit">Editar!</button>
    </form>

<%- include('./footer.ejs') %>
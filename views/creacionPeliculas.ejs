<%- include('./partials/header.ejs') %>
<script defer src="/scripts/scripts.js"></script>

    <h1 class="titulo-2">Crear película</h1>
    <form action="/crear" method="POST" id="formulario">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" id="titulo">
            <a id="errorTitulo" class="feedback"></a>
        </div> 
        <div>
            <label for="">Premios</label>
            <input type="text" name="premios" id="premios">
            <a id="errorPremios" class="feedback"></a>
        </div>
        <div>
            <label for="">Duración</label>
            <input type="text" name="duracion" id="duracion">
            <a id="errorDuracion" class="feedback"></a>
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" id="rating">
            <a id="errorRating" class="feedback"></a>
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="fecha_estreno" id="fecha">
            <a id="errorFecha" class="feedback"></a>
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero">
                <% for (let i = 0; i < generos.length; i++) { %>
                <option value="<%=generos[i]. id%>">
                    <%=generos[i].name%>
                </option>
                    <% } %>
            </select>
        </div> 
        <div class="boton">
        <button type="submit" class='button'>Crear!</button>
        </div>
    </form>

<%- include('./partials/footer.ejs') %>